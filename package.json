{
  "name": "@nanostores/persistent",
  "version": "1.1.0",
  "description": "A store for Nano Stores state manager to keep data in localStorage",
  "keywords": [
    "nano",
    "persistent",
    "react",
    "preact",
    "vue",
    "svelte",
    "store",
    "localStorage",
    "cross-tab"
  ],
  "scripts": {
    "test:lint": "eslint .",
    "test:coverage": "pnpm bnt --coverage 100 --coverage-exclude 'test/*'",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm run /^test:/",
    "start": "vite ./test/demo"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/persistent",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ai"
    }
  ],
  "peerDependencies": {
    "nanostores": "^0.9.0 || ^0.10.0 || ^0.11.0 || ^1.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^56.1.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^24.8.1",
    "actions-up": "^1.4.2",
    "better-node-test": "^0.8.3",
    "check-dts": "^0.9.0",
    "clean-publish": "^5.2.2",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.5",
    "multiocular": "^0.8.1",
    "nanodelay": "^2.0.2",
    "nanostores": "^1.0.1",
    "size-limit": "^11.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "name": "Atom",
      "import": {
        "./index.js": "{ persistentAtom }"
      },
      "limit": "281 B"
    },
    {
      "name": "Map",
      "import": {
        "./index.js": "{ persistentMap }"
      },
      "limit": "408 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
