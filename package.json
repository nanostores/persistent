{
  "name": "@nanostores/persistent",
  "version": "0.7.0",
  "description": "A tiny persistent store for Nano Stores state manager",
  "keywords": [
    "nano",
    "persistent",
    "react",
    "preact",
    "vue",
    "svelte",
    "store",
    "localStorage",
    "cross-tab"
  ],
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '(atom|map)\\.test\\.ts$' && tsm ./test/ssr.test.ts",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/persistent",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^14.0.0 || ^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "nanostores": "^0.7.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^47.2.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "c8": "^7.12.0",
    "check-dts": "^0.6.7",
    "clean-publish": "^4.0.1",
    "eslint": "^8.23.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.1",
    "jsdom": "^20.0.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.7.0",
    "size-limit": "^8.1.0",
    "tsm": "^2.2.2",
    "typescript": "^4.8.3",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "reporter": "lcov",
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "consistent-return": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Atom",
      "import": {
        "./index.js": "{ persistentAtom }"
      },
      "limit": "332 B"
    },
    {
      "name": "Map",
      "import": {
        "./index.js": "{ persistentMap }"
      },
      "limit": "461 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
