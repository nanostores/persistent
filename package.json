{
  "name": "@nanostores/persistent",
  "version": "1.0.0",
  "description": "A store for Nano Stores state manager to keep data in localStorage",
  "keywords": [
    "nano",
    "persistent",
    "react",
    "preact",
    "vue",
    "svelte",
    "store",
    "localStorage",
    "cross-tab"
  ],
  "scripts": {
    "test:lint": "eslint .",
    "test:coverage": "c8 pnpm bnt",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm run /^test:/",
    "start": "vite ./test/demo"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/persistent",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ai"
    }
  ],
  "peerDependencies": {
    "nanostores": "^0.9.0 || ^0.10.0 || ^0.11.0 || ^1.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^55.2.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "better-node-test": "^0.7.1",
    "c8": "^10.1.3",
    "check-dts": "^0.9.0",
    "clean-publish": "^5.2.2",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "nanodelay": "^2.0.2",
    "nanostores": "^1.0.1",
    "size-limit": "^11.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*",
      "test/*"
    ],
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "skip-full": true,
    "clean": true
  },
  "size-limit": [
    {
      "name": "Atom",
      "import": {
        "./index.js": "{ persistentAtom }"
      },
      "limit": "281 B"
    },
    {
      "name": "Map",
      "import": {
        "./index.js": "{ persistentMap }"
      },
      "limit": "408 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
